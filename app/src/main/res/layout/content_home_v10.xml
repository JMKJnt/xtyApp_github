<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <com.example.aiden.xtapp.widget.MultiStateView
        android:id="@+id/weather_multi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:srcCompat="@mipmap/home_banner"
        />

    <LinearLayout
        android:id="@+id/bind_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/bind_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="现在开始绑定您的设备"
            android:gravity="center"
            android:textColor="@color/header"/>


        <Button
            android:id="@+id/bind_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/selector_button_bg_blue"
            android:text="开始"
            android:textColor="@color/color_white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText_registration_verification"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_equipment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="产品型号"
            android:textColor="@color/color_gray"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/textView_weatherIndex_equipmentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:text="SmartMirror 1926"
            android:textColor="@color/small_tittle"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/button_weatherIndex_selectCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_weatherIndex_cityName_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:text="所在城市"
            android:textColor="@color/color_gray"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView_weatherIndex_cityName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:text="选择城市定制天气"
                android:textColor="@color/small_tittle"/>
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/orientation_img2"
                android:layout_gravity="left"
                android:paddingLeft="10dp"/>
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayout_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/button_weatherIndex_easylink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/color_gray"
            android:text="设置留言" />

        <TextView
            android:id="@+id/button_memorandum_set"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>
        </LinearLayout>
    </com.example.aiden.xtapp.widget.MultiStateView>
</LinearLayout>
