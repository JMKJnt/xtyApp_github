<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aiden.xtapp.ui.XtListDemoActivity"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@color/color_bg_blue"
            android:orientation="vertical"
            android:padding="18dp">

            <TextView
                android:id="@+id/tvConsoleText22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="血糖仪数据测试"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
            <TextView
                android:id="@+id/tvConsoleText222"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="上传时间：17：22：13"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:textSize="28sp" />
            <TextView
                android:id="@+id/tvConsoleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="5dp"
                android:textColor="@android:color/white"
                android:textSize="42sp"
                android:textStyle="bold"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipeRefresh_XtListDemo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.takwolf.android.hfrecyclerview.HeaderAndFooterRecyclerView
                    android:id="@+id/recyclerView_XtListDemo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </android.support.v4.widget.SwipeRefreshLayout>
        </LinearLayout>

    </LinearLayout>
